<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="review">

    <select id="findAll" resultType="review">
        select
            *
        from
            tb_review
        order by
            rev_num desc
    </select>

    <select id="findById" resultType="review">
        select
            *
        from
            tb_review
        where
            rev_id = #{id}
    </select>

<!--    <select id="findByNum" resultType="review">-->
<!--        select-->
<!--            *-->
<!--        from-->
<!--            tb_review-->
<!--        where-->
<!--            rev_num = #{num}-->
<!--    </select>-->

    <select id="getTotalCount" resultType="_int">
        select
            count(*)
        from
            tb_review
    </select>

    <select id="findByNum" resultMap="reviewVoMap">
        select
            r.*,
            p.rev_picture_num,
            p.original_filename,
            p.renamed_filename,
            p.rev_pic_num
        from
            tb_review r
                left join tb_review_picture p
                    on r.rev_num = p.rev_pic_num
        where
            r.rev_num = #{num}

    </select>
    <resultMap id="reviewVoMap" type="reviewVo">
        <id column="rev_num" property="revNum"/>
        <result column="rev_room_num" property="revRoomNum"/>
        <result column="rev_id" property="revId"/>
        <result column="rev_title" property="revTitle"/>
        <result column="rev_content" property="revContent"/>
        <result column="rev_score" property="revScore"/>
        <result column="rev_date" property="revDate"/>

        <collection property="reviewPictures" ofType="reviewPicture">
            <id column="rev_pic_num" property="revNum"/>
            <result column="original_filename" property="originalFilename"/>
            <result column="renamed_filename" property="renamedFilename"/>
            <result column="rev_picture_num" property="revPictureNum"/>
        </collection>
    </resultMap>

    <insert id="insertReview">
        insert into
            tb_review(rev_num, rev_id, rev_room_num, rev_title, rev_content, rev_score, rev_date)
        values(
               seq_rev_num.nextval,
               #{revId},
               #{revRoomNum},
               #{revTitle},
               #{revContent},
               #{revScore},
               sysdate)
        <selectKey order="AFTER" resultType="_long" keyProperty="revNum">
            select
                seq_rev_num.currval
            from
                dual
        </selectKey>
    </insert>

    <insert id="insertReviewPicture">
        insert into
            tb_review_picture (rev_picture_num, original_filename, renamed_filename, rev_pic_num)
        values (
                   seq_rev_picture_num.nextval,
                   #{originalFilename},
                   #{renamedFilename},
                   #{revPicNum}
               )
    </insert>

    <delete id="deleteReview">
        delete from
            tb_review
        where
            rev_num = #{num}
    </delete>

    <update id="updateReview">
        update
            tb_review
        set
            rev_num = #{revNum},
            rev_id = #{revId},
            rev_room_num = #{revRoomNum},
            rev_title = #{revTitle},
            rev_content = #{revContent},
            rev_score = #{revScore},
            rev_date = #{revDate}
        where
            rev_num = #{revNum}
    </update>




</mapper>