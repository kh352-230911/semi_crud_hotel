<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="review">

    <select id="findAll" resultType="review">
        select
            *
        from
            tb_review
        order by
            rev_num
    </select>

    <select id="findById" resultType="review">
        select
            *
        from
            tb_review
        where
            rev_id = #{id}
    </select>

    <select id="findByNum" resultType="review">
        select
            *
        from
            tb_review
        where
            rev_num = #{num}
    </select>

    <select id="getTotalCount" resultType="_int">
        select
            count(*)
        from
            tb_review
    </select>

    <insert id="insertReview">
        insert into
            tb_review(rev_num, rev_id, rev_room_num, rev_title, rev_content, rev_score, rev_date)
        values(
               seq_rev_num.nextval,
               #{revId},
               #{revRoomNum},
               #{revTitle},
               #{revContent},
               #{revScore},
               sysdate)
    </insert>

    <delete id="deleteReview">
        delete from
            tb_review
        where
            rev_num = #{num}
    </delete>

    <update id="updateReview">
        update
            tb_review
        set
            rev_num = #{revNum},
            rev_id = #{revId},
            rev_room_num = #{revRoomNum},
            rev_title = #{revTitle},
            rev_content = #{revContent},
            rev_score = #{revScore},
            rev_date = #{revDate}
        where
            rev_num = #{revNum}
    </update>


</mapper>