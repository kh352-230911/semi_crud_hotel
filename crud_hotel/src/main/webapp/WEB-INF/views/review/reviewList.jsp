        <thead class="text-xs text-gray-700 uppercase bg-orange-100 dark:bg-gray-700 dark:text-gray-400">
            <tr>
                <th scope="col" class="py-3 w-24">
                    글 번호
                </th>
                <th scope="col" class="py-3">
                    룸 번호
                </th>
                <th scope="col" class="py-3">
                    아이디
                </th>
                <th scope="col" class="py-3">
                    제목
                </th>
                <th scope="col" class="py-3">
                    작성일
                </th>
                <th scope="col" class="py-3">
                    첨부파일
                </th>
                <th scope="col" class="py-3 w-36">
                    리뷰점수
                </th>
            </tr>
        </thead>
